---
import { Image } from "astro:assets";
import heroImage from "../../assets/ravi.png";
import { basic, socialLinks } from "../../config/cv.json";
import { Icon } from "astro-icon/components";
---

<section class="py-5 px-4 sm:py-10 lg:py-16" id="hero">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
            <div>
                <h1 class="text-2xl font-bold sm:text-4xl lg:text-5xl mt-3">
                    {basic?.name}
                </h1>
                <p class="text-lg text-offset">
                    {basic?.job}
                </p>

                <p class="mt-5 text-base sm:text-xl">
                    {basic?.summary}
                </p>

                <a
                    href={`${import.meta.env.BASE_URL}/blogs`}
                    class="flex items-center justify-between w-fit mt-6 px-6 py-3 bg-blue-600/30 text-white font-semibold hover:bg-blue-700 transition rounded-full"
                >
                    View My Thought Log

                    <svg
                        class="h-10 w-10 ml-2"
                        xmlns="http://www.w3.org/2000/svg"
                        width="26"
                        height="26"
                        viewBox="0 0 26 26"
                        ><path
                            fill="currentColor"
                            d="M10.25 3C7.095 3 4.549 5.38 4.125 8.406c-2.24.598-3.938 2.56-3.938 4.969c0 2.672 2.081 4.82 4.688 5.125c.727 2.032 2.594 3.5 4.875 3.5c1.562 0 2.845-.793 3.813-1.875c.795.615 1.732 1.063 2.812 1.063c2.058 0 3.752-1.37 4.375-3.22h.094c2.728 0 4.968-2.22 4.968-4.937c0-2.318-1.668-4.195-3.843-4.719c-.7-1.926-2.49-3.343-4.657-3.343c-.812 0-1.536.25-2.218.593C13.944 4.08 12.27 3 10.25 3m0 2a4.28 4.28 0 0 1 3.781 2.25l.531 1.031l.938-.719a3 3 0 0 1 1.813-.593c1.468 0 2.677 1.006 2.968 2.343l.157.72l.718.062a2.95 2.95 0 0 1 2.657 2.937c0 1.625-1.312 2.938-2.97 2.938c-.201 0-.4-.025-.593-.063l-1.094-.219l-.093 1.094c-.127 1.346-1.271 2.407-2.688 2.407c-.858 0-1.6-.39-2.094-1l-.937-1.157l-.719 1.313C12.072 19.342 10.997 20 9.75 20a3.22 3.22 0 0 1-3.188-2.594l-.156-.812h-.843c-.054 0-.075.025-.094.031c-1.823 0-3.282-1.463-3.282-3.25c0-1.663 1.27-3.007 2.907-3.188l.875-.093v-.906C5.984 6.864 7.883 5 10.25 5"
                        ></path></svg
                    >
                </a>
                <div class="mt-8 flex space-x-4">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.link}
                                class="p-3 border border-transparent hover:bg-blue-600/30 rounded-lg transition dark:hover:bg-blue-500/30"
                            >
                                <Icon
                                    name={link.iconName}
                                    class="h-8 w-8 text-offset dark:text-white"
                                />
                                <span class="sr-only">{link.label}</span>
                            </a>
                        ))
                    }
                </div>
            </div>
            <div class="relative flex justify-center">
                <Image
                    class="w-full md:max-w-md lg:max-w-md"
                    src={heroImage}
                    loading="eager"
                    alt="Ravi Teja Rapolu - Software Engineer"
                />
            </div>
        </div>
    </div>
</section>
