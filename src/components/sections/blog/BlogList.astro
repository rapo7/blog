---
import type { Blog } from '../../../types/BlogType';
import BlogItem from './BlogItem.astro';

const { blogs } = Astro.props;
---

<section class="py-12 bg-background" >
  <div class="container mx-auto px-4 max-w-4xl">
    <h1 class="text-center text-primary text-4xl font-bold mb-10">My Thought Log</h1>
    <p class="text-center text-muted text-lg mb-10">
      A collection of my thoughts, ideas, and experiences. I share my insights on various topics, including technology, design, and personal growth.
    </p>
    <div class="space-y-6">
      {blogs
        .slice()
        .sort((a: Blog, b: Blog) => new Date(b.data.datetime).getTime() - new Date(a.data.datetime).getTime())
        .map((blog: Blog, index: number) => (
          <BlogItem blog={blog} isFirst={index === 0} />
        ))}
    </div>
  </div>
</section>
